{
  "name": "vite-react-ts",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "public/electron.js",
  "scripts": {
    "dev": "vite",
    "buildDev": "tsc && vite build --mode development",
    "buildStaging": "tsc && vite build --mode staging",
    "buildProd": "tsc && vite build --mode production",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "deploy:dev": "pm2 startOrRestart ecosystem.config.cjs --env development",
    "deploy:prod": "pm2 startOrRestart ecosystem.config.cjs --env production",
    "build:app": "electron-builder",
    "dev:app": "electron ."
  },
  "build": {
    "productName": "game-client-random",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "public/**/*"
    ],
    "appId": "com.ducnm.app.id",
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  },
  "dependencies": {
    "@tanstack/react-query": "^5.40.1",
    "antd": "^5.16.1",
    "axios": "^1.7.2",
    "classnames": "^2.5.1",
    "electron-is-dev": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-fast-marquee": "^1.6.4",
    "react-helmet": "^6.1.0",
    "react-icons": "^5.0.1",
    "react-router-dom": "^6.22.3",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/react-helmet": "^6.1.11",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.19",
    "electron": "^30.0.9",
    "electron-builder": "^25.0.0-alpha.9",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.38",
    "sass": "^1.74.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  },
  "author": {
    "name": "ducnm"
  }
}
